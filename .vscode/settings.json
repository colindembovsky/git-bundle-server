{
    // File formatting
    // General settings
    "editor.wordWrap": "off",
    "files.trimTrailingWhitespace": true,

    // Language-specific settings
    "[markdown]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
    },
    "[makefile]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false,
        "editor.tabSize": 8,
    },
    "[asciidoc]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "[shellscript]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false,
        "editor.tabSize": 8,
    },
    "files.associations": {
        "*.adoc": "asciidoc",
        "*.asc": "asciidoc",
        "*.md": "markdown",
        "*.sh": "shellscript",
        "prerm": "shellscript",
        "postinstall": "shellscript",
        "Makefile": "makefile"
    },

    // Cucumber settings
    "cucumber.features": [
        "test/**/features/**/*.feature",
    ],
    "cucumber.glue": [
        "test/**/features/**/*.ts",
    ],
}
