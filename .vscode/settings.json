{
    "[markdown]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false,
        "editor.tabSize": 4,
        "editor.wordWrap": "off",
        "files.trimTrailingWhitespace": true,
    },
    "[makefile]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false,
        "editor.tabSize": 8,
        "editor.wordWrap": "off",
        "files.trimTrailingWhitespace": true,
    },
    "[shellscript]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false,
        "editor.tabSize": 8,
        "editor.wordWrap": "off",
        "files.trimTrailingWhitespace": true,
    },
    "files.associations": {
        "*.md": "markdown",
        "*.sh": "shellscript",
        "prerm": "shellscript",
        "postinstall": "shellscript",
        "Makefile": "makefile"
    }
}
